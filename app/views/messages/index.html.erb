<% @messages.each do |message| %>
  <p><strong><%= message.user %>: </strong><%= message.body %></p>
<% end %>

<%= form_for [@room, Message.new] do |f| %>
  <%= f.text_field :user, class: "form-control, col-sm-2" %>
  <%= f.text_field :body, class: "form-control" %>
  <%= f.submit "Send Message", class: "btn btn-secondary" %>
<% end %>
